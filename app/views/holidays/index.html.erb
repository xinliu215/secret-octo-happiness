<p id="notice"><%= notice %></p>
<h1>Listing Holidays for <%= @countries.find(@holiday_date.first.country_id).country %> 
  in <%= @calender_dates.find(@holiday_date.first.calender_date_id).calender_date.year %></h1>

<%= form_tag holidays_path, :method => :get, class: 'get_country'  do %>
  <%= select_tag "set_country", options_from_collection_for_select(@countries, 'id', 'country', selected: params[:set_country])%>
  <%= select_tag "set_year", options_for_select((Date.today.year .. (Date.today.year+30)), selected: params[:set_year]) %>
  <%= submit_tag 'submit' %>

<% end %>

<table class = "table table-striped"> 
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @holiday_date.each do |holiday_date| %>
      <tr>
        <td><%= @holidays.find(holiday_date.holiday_id).name%></td>
        <td>Date: <%= @calender_dates.find(holiday_date.calender_date_id).calender_date %></td>
        <td>Country: <%= @countries.find(holiday_date.country_id).country %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

